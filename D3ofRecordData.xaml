<Window x:Class="Drawing_data_and_Logging.D3ofRecordData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:local="clr-namespace:Drawing_IMU_data_and_Logging"
        mc:Ignorable="d"
        Title="Recorded Data:" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <d3:ChartPlotter x:Name="EMGSignalGraphRecorded" Grid.Row="0" Grid.RowSpan="2" Margin="5, 10, 5, 10" Grid.Column="1" Grid.ColumnSpan="1">
            <d3:Header Content="EMG Signal [º]" FontSize="24"/>
        </d3:ChartPlotter>
    </Grid>
</Window>
